<!doctype html>
<html>
    <head>

        <!--Always lode angular first and then all other scripts-->
        <link rel="stylesheet" href="../public/stylesheets/css/bootstrap.css">
        <link rel="stylesheet" href="stylesheets/simpleFormStyle.css">
        <!--<script type="text/javascript" src="javascripts/angular.min.js"></script>-->
        <!--<script src="javascripts/angular.min.js"></script>-->

        <!--<script type="text/javascript" src="angular-route.js"></script>-->
        <script src="../javascripts/angular.min.js"></script>
        <script src="../javascripts/angular-route.min.js"></script>
        <script type="text/javascript" src="javascripts/submitApp.js"></script>


    </head>
    <!--<style>body{font-family:"Arial";background-color:#E2E2DC}</style>-->
    <body ng-app="patientSubmit" ng-controller="HomeController"  >
        <div style="padding-left: 10px">
            <form name="Form" novalidate="">
                <h1>Patient Information Entry form</h1>
                <div class="line">
                    <label >Firstname *: </label>
                    <input type="text" placeholder="firstname" ng-model="firstName" required />
                </div>
                <br>
                <div class="line">
                    <label >Lastname *: </label>
                    <input type="text" placeholder="lastname" ng-model="lastName" required />
                    <div ng-show="agedob">tahfnalkansf</div>
                </div>
                <!-- You may want to consider adding a "confirm" password box also -->
                <br>
                <div class="line">
                    <label >Age *: </label>
                    <input type="text" placeholder="age" ng-model="age" name="agefield" required ng-pattern="/^\d+$/" required />
                    <a ng-show="Form.agefield.$error.pattern">Not a valid age!</a>
                    <a ng-show="Form.agefield.$error.required">This field is required!</a>

                </div>
                <br>
                <div class="line" >
                    <label >Date of Birth *: </label>
                    <input type="text" placeholder="dd/mm/yyyy (or) dd-mm-yyyy" ng-model="dob" required ng-pattern="/^(0?[1-9]|[12][0-9]|3[01])[\/\-](0?[1-9]|1[012])[\/\-]\d{4}$/" name="dobfield"   required/>
                    <a ng-show="Form.dobfield.$error.pattern">Not a valid date!</a>
                    <a ng-show="Form.dobfield.$error.required">This field is required!</a>
                    <!--<span ng-if=" dob != 'cat' ">Not a valid date!</span>-->

                </div>
                <br>
                <div class="line">
                    <label >Gender *: </label>
                    <select name="Gender" placeholder="Gender" ng-model="gender" required>
                        <option value="">---Please select---</option> <!-- not selected / blank option -->
                        <option>Male</option>
                        <option>Female</option>
                    </select>
                </div>
                <br>
                <div class="line">
                    <label >Phone *: </label>
                    <input type="text" placeholder="phone-number" require ng-pattern="/^\d{10}$/" ng-model="phone" name="phone" required>
                    <!--<input type="text" ng-model="phone" />-->
                   <a ng-show="Form.phone.$error.pattern">Not a valid Phone Number!</a>
                    <a ng-show="Form.phone.$error.required">This field is required!</a>
 
                </div>
                <br>
                <label style="float:left" >Patient information *: </label>
                    <textarea  placeholder="Enter patient information here" cols="80" rows="8" ng-model="pInfo" required>
                    </textarea>
                <br>
                <br>
                <button ng-disabled="Form.$invalid" ng-click="submitForm()" >Submit Query</button>

                <p>Note: Please make sure your details are correct before submitting form and that all fields marked with * are completed!.</p>
            </form>
        </div>
    </body>
</html>



